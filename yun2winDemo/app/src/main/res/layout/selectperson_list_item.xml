<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white" >
    <TextView
        android:id="@+id/textchart"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_20"
        android:background="#e3efef"
        android:text="A"
        android:textColor="#353535"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:textSize="@dimen/sp_14"
        android:visibility="gone"
        android:layout_marginRight="@dimen/dp_15"
        />
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_8"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10" >

        <ImageView
            android:id="@+id/iv_contact_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/dp_3"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_8"
            android:src="@drawable/unchecked"
            android:scaleType="centerInside" />

        <RelativeLayout
            android:id="@+id/relativeLayout11"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/iv_contact_select"
            android:layout_marginBottom="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_contact_header"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:layout_centerVertical="true"
                android:background="@drawable/circle_name_3"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="@dimen/sp_18" />
            <y2w.common.HeadImageView
                android:id="@+id/img_contact_header"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:scaleType="centerCrop" />
        </RelativeLayout>
    <LinearLayout
        android:id="@+id/selectchildren"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/relativeLayout11"
        android:layout_centerVertical="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="middle"
            android:maxWidth="@dimen/dp_180"
            android:singleLine="true"
            android:text=""
            android:layout_weight="1"
            android:textColor="#101010"
            android:textSize="@dimen/sp_18" />
        <ImageView
            android:id="@+id/imgarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nim_arrow_right"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_10"
            android:visibility="gone"/>
    </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/viewline"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_alignParentLeft="true"
        android:background="@color/item_divider" />

</LinearLayout>