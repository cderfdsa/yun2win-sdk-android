<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_wb_draw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/wb_action_draw_selected" />

        <ImageView
            android:id="@+id/iv_wb_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@+id/iv_wb_draw"
            android:background="@drawable/wb_action_settings_normal" />

        <ImageView
            android:id="@+id/iv_wb_eraser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@+id/iv_wb_settings"
            android:background="@drawable/wb_action_eraser_normal" />

        <ImageView
            android:id="@+id/iv_wb_catch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@+id/iv_wb_eraser"
            android:background="@drawable/wb_action_catch_normal" />

        <ImageView
            android:id="@+id/iv_wb_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@+id/iv_wb_catch"
            android:background="@drawable/wb_action_text_normal" />


    </RelativeLayout>

</LinearLayout>